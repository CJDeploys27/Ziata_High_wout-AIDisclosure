# FINAL ATTEMPT: Force Content-Type for all built JavaScript files

<IfModule mod_headers>
    # Check if the file is a .js or .mjs file
    <FilesMatch "\.(js|mjs)$">
        # Force the correct header value, regardless of global default
        Header set Content-Type "application/javascript"
        # Optional: Clear other server headers that might interfere
        Header unset Last-Modified
        Header unset ETag
    </FilesMatch>
</IfModule>

# Keep the traditional AddType as a fallback
<IfModule mod_mime>
    AddType application/javascript .js
    AddType application/javascript .mjs
</IfModule>
